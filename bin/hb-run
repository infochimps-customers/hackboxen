#!/usr/bin/env ruby

require 'optparse'

options = {}
 
optparse = OptionParser.new do |opts|
  opts.banner = "Usage: hb-run [options] filename"

  options[:silent] = false
  opts.on('-s', '--silent', 'Suppress all output except exit status') do
    options[:silent] = true
  end

  options[:verbose] = false
  opts.on('-v', '--verbose', 'Output all debug information' ) do
    options[:verbose] = true
  end

  options[:overwrite] = false
  opts.on('-o', '--overwrite', 'Always overwrite output even if file already exists' ) do
    options[:overwrite] = true
  end
  
  options[:logfile] = nil
  opts.on( '-l', '--logfile FILE', 'Write log to FILE' ) do |file|
    options[:logfile] = file
  end
  
  opts.on( '-h', '--help', 'Display this screen' ) do
    puts opts ; exit
  end
end

optparse.parse!
